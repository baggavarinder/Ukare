@model Ukare.Service.UserLoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-1.9.1.js"></script>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<slider>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6"></div>
            <div class="col-md-5 col-sm-5">
                <div class="log-blog">
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        <div class="col-md-12 col-sm-12">
                            <h4 class="form-titl">Sign in</h4>
                        </div>
                        <div class="col-md-12 col-sm-12" style="text-align:center">
                            <label class="text-danger">@ViewBag.LoginError</label>
                        </div>                    <div class="col-md-12 col-sm-12">
                            <div class="form-group">

                                @Html.LabelFor(m => m.Email, new { @style = "font-size: 17px;" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter email", @style = "font-size: 17px; height: 40px;", @type = "email" })
                                <div>
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">

                                @Html.LabelFor(m => m.Password, new { @style = "font-size: 17px;" })
                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @style = "font-size: 17px; height: 40px;", @type = "password" })
                                <div>
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="col-md-4 col-xs-4" style="padding: 0px 15px 0px 0px;">
                                <div class="">
                                    <label class="radio-inline adradio">
                                        @Html.RadioButtonFor(m => m.RoleId, 1) Admin
                                    </label>
                                </div>
                            </div>
                            @*<div class="col-md-6 col-xs-6" style="padding: 0px 15px 0px 0px;">
                                    <div class="">
                                        <label class="radio-inline adradio">
                                            @Html.RadioButtonFor(m => m.RoleId, 2) Employee
                                        </label>
                                    </div>
                                </div>*@
                            <div class="col-md-4 col-xs-4" style="padding: 0px 15px 0px 0px;">
                                <div class="">
                                    <label class="radio-inline adradio">
                                        @Html.RadioButtonFor(m => m.RoleId, 3) Staff
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-4 col-xs-4" style="padding: 0px 15px 0px 0px;">
                                <div class="">
                                    <label class="radio-inline adradio">
                                        @Html.RadioButtonFor(m => m.RoleId, 4) Registered
                                    </label>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="text-center">
                                    <div class="g-recaptcha" data-sitekey=@System.Configuration.ConfigurationManager.AppSettings["captchaSiteKey"]></div>
                                </div>
                            </div>

                            <div class="col-md-12 col-xs-12">
                                <div class="log-btn">

                                    <input type="submit" value="Login" class="form-btn" />

                                    @*<a href="verification_page">Login</a>*@
                                </div>
                            </div>
                            <div class="col-md-12 col-xs-12"><p class="foget"><a href="forgot_password">Forgot Password?</a></p></div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-1 col-sm-1"></div>
        </div>
    </div>
</slider>