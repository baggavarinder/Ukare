@{
    ViewBag.Title = "AddNewUser";
    Layout = "~/Views/Admin/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="content-wrapper" style="min-height: 750px;">
            <section class="content-header">
                <h3>Add New User</h3>
            </section>

            <section class="content">
                <!-- Info boxes -->
                <div class="row">
                    <div class="col-md-10 col-sm-12 col-xs-12">
                        <div class="use-box fombox">
                            <h5>Detail Form</h5>
                            @using (Html.BeginForm())
                            {
                                <div class="col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <label for="example-text-input" class="col-2 col-form-label ulable">User Name</label>
                                        <div class="col-10">
                                            <input class="form-control uinput" type="text" value="" id="example-text-input" placeholder="Enter User Name">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="example-text-input" class="col-2 col-form-label ulable">First Name</label>
                                        <div class="col-10">
                                            <input class="form-control uinput" type="text" value="" id="example-text-input" placeholder="Enter First Name">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1" class="ulable">Password</label>
                                        <input type="password" class="form-control uinput" id="exampleInputPassword1" placeholder="Enter Password">
                                    </div>
                                </div>

                                <div class="col-md-6 col-sm-6">
                                    <div class="form-group">
                                        <label for="example-text-input" class="col-2 col-form-label ulable">Email</label>
                                        <div class="col-10">
                                            <input class="form-control uinput" type="text" value="" id="example-text-input" placeholder="Enter Email">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="example-text-input" class="col-2 col-form-label ulable">Last Name</label>
                                        <div class="col-10">
                                            <input class="form-control uinput" type="text" value="" id="example-text-input" placeholder="Enter Last Name">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1" class="ulable">Confirm Password</label>
                                        <input type="password" class="form-control uinput" id="exampleInputPassword1" placeholder="Password">
                                    </div>
                                    <div class="form-group">
                                        <button class="sevbtn">Save</button><button class="clrbtn">Clear</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="clearfix visible-sm-block"></div>
                </div>
            </section>
        </div>
    </div>
</div>
